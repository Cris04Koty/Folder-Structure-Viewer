{
  "name": "folder-structure-viewer",
  "displayName": "Folder Structure Viewer",
  "description": "Genera un archivo de texto con la estructura de carpetas y archivos de un directorio.",
  "version": "2.0.0",
  "publisher": "cristiandev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cris04Koty/Folder-Structure-Viewer.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:folderStructureViewer.generate",
    "onCommand:folderStructureViewer.generateFromFileExplorer",
    "onCommand:folderStructureViewer.copyStructureToClipboard"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "folderStructureViewer.generate",
        "title": "Generar estructura de carpetas (desde Paleta de Comandos)",
        "category": "FolderStructure"
      },
      {
        "command": "folderStructureViewer.generateFromFileExplorer",
        "title": "Generar Estructura en Archivo...",
        "category": "FolderStructure"
      },
      {
        "command": "folderStructureViewer.copyStructureToClipboard",
        "title": "Copiar Estructura al Portapapeles",
        "category": "FolderStructure"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "folderStructureViewer.generateFromFileExplorer",
          "when": "explorerResourceIsFolder",
          "group": "navigation@5"
        },
        {
          "command": "folderStructureViewer.copyStructureToClipboard",
          "when": "explorerResourceIsFolder",
          "group": "navigation@5"
        }
      ]
    },
    "configuration": {
      "title": "Folder Structure Viewer",
      "properties": {
        "folderStructureViewer.ignorePatterns": {
          "type": "array",
          "default": [],
          "description": "Nombres de archivos o carpetas a ignorar al generar la estructura. Se suman a los patrones por defecto (.git, node_modules, etc.)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.18.17",
    "typescript": "^5.1.6",
    "vsce": "^2.15.0"
  }
}
